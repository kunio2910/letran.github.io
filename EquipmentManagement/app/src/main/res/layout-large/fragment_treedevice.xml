<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login">

    <ImageView
        android:id="@+id/line"
        android:layout_width="50px"
        android:layout_height="560dp"
        android:layout_marginLeft="440dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/line" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="TREE VIEW"
        android:textColor="@color/Yellow"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/btnstar_3"
                android:layout_weight=".7"
                android:text="B3: APPROVE FROM ACCOUNTING"
                android:textStyle="italic|bold"
                android:textSize="21dp"/>

            <Button
                android:id="@+id/btnstar_3"
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".3"
                android:background="@drawable/star_white_blur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/btnstar_2"
                android:layout_weight=".7"
                android:text="B2: APPROVE TICKET"
                android:textStyle="italic|bold"
                android:textSize="21dp"/>

            <Button
                android:id="@+id/btnstar_2"
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_marginLeft="210dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".3"
                android:background="@drawable/star_white_blur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/btnstar_1"
                android:layout_weight=".7"
                android:text="B1: SEND TICKET"
                android:textStyle="italic|bold"
                android:textSize="21dp"/>

            <Button
                android:id="@+id/btnstar_1"
                android:layout_width="85px"
                android:layout_height="85px"
                android:layout_marginLeft="250dp"
                android:layout_marginRight="20dp"
                android:layout_weight=".3"
                android:background="@drawable/star_yellow" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="* Click star if you want watch information !!!"
            android:textColor="@color/Red"
            android:textSize="18dp" />
    </LinearLayout>
</RelativeLayout>

