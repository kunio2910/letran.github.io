<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_login">

    <ImageView
        android:id="@+id/line"
        android:layout_width="50px"
        android:layout_height="280dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/line" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="TREE VIEW"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="75dp"
                android:layout_toLeftOf="@+id/btnstar_3"
                android:layout_weight=".7"
                android:text="B3: APPROVE FROM ACCOUNTING"
                android:textStyle="italic|bold"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnstar_3"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="75dp"
                android:layout_weight=".3"
                android:background="@drawable/star_white_blur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/btnstar_2"
                android:layout_weight=".7"
                android:text="B2: APPROVE TICKET"
                android:textStyle="italic|bold"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnstar_2"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginLeft="145dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".3"
                android:background="@drawable/star_white_blur" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/btnstar_1"
                android:layout_weight=".7"
                android:text="B1: SEND TICKET"
                android:textStyle="italic|bold"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnstar_1"
                android:layout_width="75px"
                android:layout_height="75px"
                android:layout_marginLeft="175dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".3"
                android:background="@drawable/star_yellow" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_marginTop="50dp"
            android:text="* Click star if you want watch information !!!"
            android:textColor="@color/Red"
            android:textSize="11dp" />

    </LinearLayout>
</RelativeLayout>

